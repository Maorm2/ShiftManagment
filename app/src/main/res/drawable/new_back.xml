<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <corners
        android:topRightRadius="0dp"
        android:topLeftRadius="300dp"
        android:bottomLeftRadius="0dp"
        android:bottomRightRadius="300dp" />

    <solid android:color="#C9FFFFFF"/>

    <gradient
        android:type="linear"
        android:startColor="@color/colorstyle1"
        android:endColor="@color/colorstyle3"
        android:angle="45"/>

    If your shape requires only one solid color-->
    <!--<solid
        android:color="#FFFFFF" />-->

    <size
        android:width="80dp"
        android:height="150dp" />


    <!--Use android:dashWidth="2dp" and android:dashGap="2dp"
    to add dashes to your stroke-->
    <stroke
        android:width="2dp"
        android:color="#00FFFFFF" />

    <!--If you want to add padding-->
